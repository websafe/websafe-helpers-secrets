{
  "name": "websafe/helpers-secrets",
  "description": "Secret resolution helper for PHP (env \u2192 ./secrets \u2192 /run/secrets \u2192 default).",
  "license": "MIT",
  "authors": [
    {
      "name": "Thomas Szteliga",
      "email": "ts@websafe.pl"
    }
  ],
  "autoload": {
    "files": [
      "src/Secrets.php"
    ]
  },
  "require": {
    "php": ">=8.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5 || ^11.0",
    "friendsofphp/php-cs-fixer": "^3.64",
    "squizlabs/php_codesniffer": "^3.10"
  },
  "scripts": {
    "test": "phpunit",
    "cs:fix": "php-cs-fixer fix --config=.php-cs-fixer.dist.php --verbose",
    "cs:check": "php-cs-fixer fix --config=.php-cs-fixer.dist.php --verbose --dry-run --diff",
    "lint": "phpcs --standard=phpcs.xml.dist",
    "lint:fix": "phpcbf --standard=phpcs.xml.dist"
  }
}
